<idea-plugin>
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.I18nBundle</resource-bundle>

    <!-- ToolWindow -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="FolderMount"
                anchor="right"
                canCloseContents="true"
                factoryClass="com.devops00.plugins.folder.mount.ui.FolderMountToolWindow"/>

        <fileTemplate
                id="EmptyFile"
                fileName="EmptyFile"
                extension=""
                description="我的自定义模板"/>
    </extensions>

    <!-- Actions -->
    <actions>
        <group id="FolderMount.Toolbar" popup="false">
            <action id="FolderMount.Attach"
                    class="com.devops00.plugins.folder.mount.actions.ActionAttach"
                    icon="AllIcons.Nodes.Folder"/>

            <action id="FolderMount.Refresh"
                    class="com.devops00.plugins.folder.mount.actions.ActionRefresh"
                    icon="AllIcons.Actions.Refresh"/>
        </group>
    </actions>
</idea-plugin>
